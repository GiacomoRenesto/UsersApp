<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/relative"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:padding="5dp">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        card_view:cardUseCompatPadding="true"
        android:outlineAmbientShadowColor="@android:color/black"
        android:elevation="2dp"
        app:cardCornerRadius="10dp"
        android:innerRadius="10dp"
        android:shape="ring"
        android:thicknessRatio="1.9">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivUserIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:paddingLeft="5dp"
        android:paddingRight="20dp"
        android:src="@drawable/ic_person_black_24dp"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/colorPrimary"/>

        <at.markushi.ui.CircleButton
            android:id="@+id/deleteCircle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginStart="350dp"
            android:layout_marginLeft="350dp"
            android:layout_marginTop="22dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:clickable="true"
            android:src="@drawable/ic_clear_black_24dp"
            app:cb_color="@android:color/darker_gray"
            app:cb_pressedRingWidth="10dp" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/ivUserIcon"
        android:paddingTop="15dp"
        android:paddingLeft="15dp"
        android:paddingRight="5dp"
        android:paddingBottom="0dp"
        android:layout_gravity="center_horizontal"
        android:text="San"
        android:textColor="@android:color/black"
        android:textSize="25dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvLastName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:paddingLeft="5dp"
        android:paddingRight="15dp"
        android:paddingBottom="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_toRightOf="@id/tvName"
        android:textColor="@android:color/black"
        android:textSize="25dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/Phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvName"
        android:layout_toRightOf="@id/ivUserIcon"
        android:layout_gravity="bottom"
        android:paddingTop="15dp"
        android:paddingLeft="15dp"
        android:paddingRight="5dp"
        android:paddingBottom="5dp"
        android:text="Phone:"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="15dp"
        android:textColor="@android:color/black"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tvPhoneNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvName"
        android:layout_toRightOf="@id/Phone"
        android:layout_gravity="bottom"
        android:paddingTop="15dp"
        android:paddingLeft="5dp"
        android:paddingRight="15dp"
        android:paddingBottom="5dp"
        android:layout_alignBaseline="@id/Phone"
        android:text="Phone:"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="15dp"
        android:textColor="@android:color/black"
        android:textStyle="bold"/>


    <TextView
        android:id="@+id/Email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Phone"
        android:layout_toRightOf="@id/ivUserIcon"
        android:layout_gravity="bottom"
        android:paddingTop="5dp"
        android:paddingLeft="15dp"
        android:paddingRight="5dp"
        android:paddingBottom="5dp"
        android:text="E-mail:"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="15dp"
        android:textColor="@android:color/black"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tvEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Phone"
        android:layout_toRightOf="@id/Email"
        android:layout_gravity="bottom"
        android:paddingTop="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="15dp"
        android:paddingBottom="15dp"
        android:layout_alignBaseline="@id/Email"
        android:text="San Marco"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="15dp" />


    </RelativeLayout>

</android.support.v7.widget.CardView>


</RelativeLayout>